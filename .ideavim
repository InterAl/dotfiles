Plug 'preservim/nerdtree'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'machakann/vim-highlightedyank'

set visualbell
#set noerrorbells
#set rnu

let mapleader=" "
map <S-y> "*y

"search
set nohls
set incsearch
set ignorecase
set smartcase
set wrapscan

"alias
command! W w
command! Q q
command! Q quit<bang>
command! Qa qa<bang>
command! WQ wq<bang>
command! Wq wq<bang>
command! WQ wq<bang>

nmap <leader>r :source ~/.ideavim<CR>