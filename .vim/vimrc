"fix gf for typescript
augroup suffixes
    autocmd!

    let associations = [
        \["javascript,typescript.javascript.jsx,typescript.javascript", ".es6,.ts,.typescript,.tsx"]
    \]

    for ft in associations
        execute "autocmd FileType " . ft[0] . " setlocal suffixesadd=" . ft[1]
    endfor
augroup END

